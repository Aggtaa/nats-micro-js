{
  "compilerOptions": {
    "target": "es2020",
    "rootDir": ".",
    "outDir": "lib",
    "module": "commonjs",
    "sourceMap": false,
    "incremental": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": [ "es5", "es6", "es2020", "DOM", "DOM.Iterable" ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".eslintrc.js"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
