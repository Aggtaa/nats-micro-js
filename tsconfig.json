{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "src",
    "outDir": "lib",
    "module": "ES2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node16",
    "noEmit": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".eslintrc.js", "lib", "examples"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}
